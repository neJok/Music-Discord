{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "@customTypes/*": [
        "./src/types/*"
      ],
      "@base/*": [
        "./src/struct/base/*"
      ],
      "@struct/*": [
        "./src/struct/*"
      ],
      "@db/*": [
        "./src/database/*"
      ]
    }
  }
}
